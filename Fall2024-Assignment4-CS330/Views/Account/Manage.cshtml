@model Fall2024_Assignment4_CS330.Models.ManageAccountVM

<h2>Manage Account</h2>

<form asp-action="Manage" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="DisplayName"></label>
        <input asp-for="DisplayName" class="form-control" />
        <span asp-validation-for="DisplayName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Photo" class="control-label"></label>
        <input type="file" id="Photo" name="Photo" class="form-control" />
        <span asp-validation-for="Photo" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>

<div>
    <h2>Account Stats</h2>
    <p>Wins: @Model.GamesWon</p>
    <p>Losses: @Model.GamesLost</p>
    <p>Total Games Played: @Model.GamesPlayed</p>
    <p>Win Percentage: @Model.WinPercentage.ToString("F2")%</p>
</div>

<div>
    <h2>Game History</h2>
    @if (Model.gameHistory != null && Model.gameHistory.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Game ID</th>
                    <th>Opponent</th>
                    <th>Status</th>
                    <th>Winner</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var game in Model.gameHistory)
                {
                    <tr>
                        <td>@game.Id</td>
                        <td>
                            @if (game.Player1Id == User.Identity.Name)
                            {
                                @game.Player2Id
                            }
                            else
                            {
                                @game.Player1Id
                            }
                        </td>
                        <td>@game.Status</td>
                        <td>@game.GameWinner</td>
                        <td>@game.GameCreationTime?.ToString("yyyy-MM-dd")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No game history available.</p>
    }
</div>

<!-- Delete Account Form -->
<form asp-action="Delete" method="get">
    <button type="submit" class="btn btn-danger">Delete Account</button>
</form>
