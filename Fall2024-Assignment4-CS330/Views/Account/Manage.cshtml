@model Fall2024_Assignment4_CS330.Models.ManageAccountVM

<div class="container mt-2">
    <p class="display-4" style="color: var(--bs-pink)!important">Manage Account</p>
    <div class="row">
        <!-- Account Details Section -->
        <div class="col-md-6">
            <div class="card shadow mb-4">
                <div class="card-header text-white" style="background-color: var(--bs-purple)!important">
                    <h2 class="mb-0">Account Details</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Manage" method="post" enctype="multipart/form-data">
                        <div class="form-group mb-2">
                            <label asp-for="DisplayName" class="text-primary"></label>
                            <input asp-for="DisplayName" class="form-control" />
                            <span asp-validation-for="DisplayName" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="Email" class="text-primary"></label>
                            <input asp-for="Email" class="form-control" readonly />
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="Photo" class="text-primary"></label>
                            <input type="file" id="Photo" name="Photo" class="form-control" />
                            <span asp-validation-for="Photo" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Update</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow mb-4">
                <div class="card-header text-white" style="background-color: var(--bs-purple)!important">
                    <h2 class="mb-0">Account Stats</h2>
                </div>
                <div class="card-body">
                    <p><strong>Wins:</strong> @Model.GamesWon</p>
                    <p><strong>Losses:</strong> @Model.GamesLost</p>
                    <p><strong>Ties:</strong> @Model.GamesTied</p>
                    <p><strong>Total Games Played:</strong> @Model.GamesPlayed</p>
                    <p><strong>Win Percentage:</strong> @Model.WinPercentage.ToString("F2")%</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Game History Section -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header text-white" style="background-color: var(--bs-purple)!important">
                    <h2 class="mb-0">Game History</h2>
                </div>
                <div class="card-body">
                    @if (Model.gameHistory != null && Model.gameHistory.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Game ID</th>
                                        <th>Status</th>
                                        <th>Winner</th>
                                        <th>Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var game in Model.gameHistory)
                                    {
                                        <tr>
                                            <td>@game.Id</td>
                                            <td>@game.Status</td>
                                            <td>@game.GameWinner</td>
                                            <td>@game.GameCreationTime?.ToString("yyyy-MM-dd")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No game history available.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Delete Account Button -->
    <div class="row mt-3">
        <div class="col-12 d-flex justify-content-end">
            <form asp-action="Delete" method="get">
                <button type="submit" class="btn btn-danger">Delete Account</button>
            </form>
        </div>
    </div>
</div>
