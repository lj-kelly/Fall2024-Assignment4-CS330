@{
    ViewData["Title"] = "Home Page";
    string errorMessage = "";
    if (TempData["ErrorMessage"] != null) errorMessage = TempData["ErrorMessage"].ToString();
}

<head>
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<div class="video-background">
    <video autoplay loop muted playsinline>
        <source src="/lib/space.mp4" type="video/mp4">
        <!--<source src="/lib/army.mp4" type="video/mp4">-->
        Your browser does not support the video tag.
    </video>
</div>

<div class="text-center">
    <h1 class="display-4">Welcome to Web Tic Tac Toe</h1>
    <div class="text-center">
        <a href="@Url.Action("Local", "TTT")" class="btn btn-success play-button">Play Locally</a>
        <a href="@Url.Action("ChatGPT", "TTT")" class="btn btn-success play-button">Play AI</a>
        <button class="btn btn-success play-button" data-bs-toggle="modal" data-bs-target="#onlineModal">Play Online</button>
    </div>
</div>

<!-- Online Gameplay Selector Modal -->
<div class="modal fade" id="onlineModal" tabindex="-1" aria-labelledby="onlineModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="onlineModalLabel">Play Online</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <ul class="nav nav-tabs" id="onlineTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="queue-tab" data-bs-toggle="tab" data-bs-target="#queue" type="button" role="tab" aria-controls="queue" aria-selected="true">Queue for Game</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="create-tab" data-bs-toggle="tab" data-bs-target="#create" type="button" role="tab" aria-controls="create" aria-selected="false">Create Lobby</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="join-tab" data-bs-toggle="tab" data-bs-target="#join" type="button" role="tab" aria-controls="join" aria-selected="false">Join Lobby</button>
                    </li>
                </ul>
                <div class="tab-content mt-3" id="onlineTabContent">
                    <!-- Queue Tab -->
                    <div class="tab-pane fade show active" id="queue" role="tabpanel" aria-labelledby="queue-tab">
                        <h5>Queue for a Game</h5>
                        <p>Click the button below to search for a public game. If no games are found, a new one will be created.</p>
                        <form method="post" action="@Url.Action("QueueHandler", "Home")">
                            <button type="submit" class="btn btn-primary">Queue Up</button>
                        </form>
                    </div>
                    <!-- Create Lobby Tab -->
                    <div class="tab-pane fade" id="create" role="tabpanel" aria-labelledby="create-tab">
                        <h5>Create a Lobby</h5>
                        <form method="post" action="@Url.Action("CreateLobbyHandler", "Home")">
                            <div class="mb-3">
                                <label for="gameCode" class="form-label">Game Code (up to 10 characters)</label>
                                <input type="text" class="form-control" id="gameCode" name="gameCode" maxlength="10" required>
                            </div>
                            <div class="mb-3">
                                <label for="timeLimit" class="form-label">Player Timer</label>
                                <select class="form-select" id="timeLimit" name="timeLimit" required>
                                    <option value="2">2 Minutes</option>
                                    <option value="5">5 Minutes</option>
                                    <option value="10">10 Minutes</option>
                                    <option value="20">20 Minutes</option>
                                    <option value="60">60 Minutes</option>
                                </select>
                            </div>
                            <button type="submit" class="btn btn-primary">Create Lobby</button>
                        </form>
                    </div>
                    <!-- Join Lobby Tab -->
                    <div class="tab-pane fade" id="join" role="tabpanel" aria-labelledby="join-tab">
                        <h5>Join a Lobby</h5>
                        <form method="post" action="@Url.Action("JoinLobbyHandler", "Home")">
                            <div class="mb-3">
                                <label for="joinCode" class="form-label">Enter Game Code</label>
                                <input type="text" class="form-control" id="joinCode" name="joinCode" required>
                            </div>
                            <button type="submit" class="btn btn-primary">Join Lobby</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (errorMessage.Length > 0)
{
    <div>
        <span>@errorMessage</span>
    </div>
}
